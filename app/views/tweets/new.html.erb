<h1>New Tweet</h1>

<%= form_for @tweet do |f| %>
  <!-- Show any errors if they exist -->
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@tweet.errors.count, "error") %> prohibited this tweet from being saved:
      </h2>

      <!-- iterate through the errors and show them -->
      <ul>
        <% @tweet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- The actual form -->
  <div class="field form-group">
    <%= f.label :message %>
    <%= f.text_field :message, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.hidden_field :user_id, value: current_user.id, class: 'form-control' %>
  </div>

  <div class="actions form-group">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'See All The Tweets', tweets_path, class: 'btn btn-default' %>